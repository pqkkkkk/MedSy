<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MedSy.Views.Doctor.OnlineConsultationUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MedSy.Views.Doctor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <Grid Background="#d4f3ff">
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid
            x:Name="mainField"
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <WebView2
                Grid.Column="0"
                x:Name="videlcall"
                Source="http://localhost:5555/videocall"
                NavigationCompleted="sendDataToVideoCallClientAsync"/>
            
            <Grid
                x:Name="diagnosisField"
                Grid.Column="1"
                VerticalAlignment="Stretch"
                Background="#c1c1c1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Viewbox
                    Grid.Row="0"
                    MaxWidth="200">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="#336699"
                        FontWeight="Bold"
                        Margin="0,0,0,20"
                        Text="Write Diagnosis"/>
                </Viewbox>
                <ScrollViewer
                    
                    CornerRadius="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Grid.Row="1">
                    <TextBox
                        Foreground="#336699"
                        TextWrapping="Wrap"
                        Background="#ffffff"
                        FontWeight="SemiBold"
                        PlaceholderText="Type diagnosis for patient..."
                        PlaceholderForeground="#c1c1c1"
                        Margin="0,0,0,10">
                    </TextBox>
                </ScrollViewer>
                <Viewbox
                    Margin="0,0,0,10"
                    Grid.Row="2"
                    VerticalAlignment="Bottom"
                    MaxHeight="100"
                    MaxWidth="100">
                    <Button
                        CornerRadius="10"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Background="#ffffff">
                        <TextBlock
                            Text="Save"
                            FontWeight="SemiBold"
                            Foreground="#336699">
                        </TextBlock>
                    </Button>
                </Viewbox>
            </Grid>
            
        </Grid>
        <TextBlock
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            x:Name="endOCMessage"
            Visibility="Collapsed"
            Grid.Row="0"
            FontWeight="Bold"
            Text="Online consultation has finished..."
            Foreground="#336699"
            FontSize="30"/>
        <Button
            x:Name="endOCButton"
            Visibility="Collapsed"
            IsEnabled="False"
            HorizontalAlignment="Center"
            Grid.Row="1"
            Background="#ffffff"
            Click="endOnlineConsultation">
            <TextBlock
                x:Name="endOCText"
                Text="Return to consultation request page"
                FontWeight="SemiBold"
                Foreground="#336699">
            </TextBlock>
        </Button>
        
    </Grid>
</UserControl>
